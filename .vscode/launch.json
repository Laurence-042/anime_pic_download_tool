    "version": "0.2.0",
    "configurations": [
        {
            "name": "hydrus_tagger: dry-run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/hydrus_tagger.py",
            "args": ["${input:targetDirectory}", "--dry-run"],
            "console": "integratedTerminal"
        },
        {
            "name": "hydrus_tagger: process",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/hydrus_tagger.py",
            "args": ["${input:targetDirectory}"],
            "console": "integratedTerminal"
        },
        {
            "name": "hydrus_tagger: skip existing",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/hydrus_tagger.py",
            "args": ["${input:targetDirectory}", "--skip-existing"],
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "id": "targetDirectory",
            "type": "promptString",
            "description": "Directory to scan for image files",
            "default": "./download"
        }
    ]
}